<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Confi 3.0//EN" 
				"http://www.mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>

	<typeAliases>
	   <typeAlias alias = "Student" type = "SpringBootDemo.Beans.Student"/>
	   <typeAlias alias = "StudentMapper" type = "SpringBootDemo.Services.StudentMapper"/>
	</typeAliases>		
	
	<environments default = "development">
	   <environment id = "development">
	      <transactionManager type = "JDBC"/>         
	      <dataSource type = "POOLED">
	         <property name = "driver" value = "com.mysql.jdbc.Driver"/>
	         <property name = "url" value = "jdbc:mysql://localhost:3306/springschema?useSSL=false"/>
	         <property name = "username" value = "root"/>
	         <property name = "password" value = "password"/>
	      </dataSource>            
	   </environment>
	</environments>	
	
	<mappers>
	   <mapper resource = "StudentMapper.xml"/>
	</mappers>   
	
</configuration>